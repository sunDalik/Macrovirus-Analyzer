{
  "name": "Macro Virus analyzer extension",
  "description": "Automatically scans files for macro viruses",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "app.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://kit.fontawesome.com; object-src 'self'",
  "permissions": [
    "storage",
    "downloads",
    "file://*/*",
    "notifications"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}